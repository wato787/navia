{
  // Biomeをデフォルトフォーマッターとして設定
  "editor.defaultFormatter": "biomejs.biome",
  // 保存時に自動フォーマット
  "editor.formatOnSave": true,
  // 保存時にBiomeでフォーマット
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  // Biomeの有効化
  "biome.enabled": true,
  // 保存時に自動的にインポートを整理
  "editor.codeActionsOnSave": {
    "source.organizeImports.biome": "explicit",
    "source.fixAll.biome": "explicit"
  }
}

