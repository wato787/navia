{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "outDir": "dist",
    "rootDir": "src",
    "types": ["@types/bun"],
    "resolveJsonModule": true,
    "moduleDetection": "force"
  },
  "include": ["src"],
  "exclude": ["dist"]
}
