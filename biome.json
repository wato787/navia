{
  "$schema": "https://biomejs.dev/schemas/2.3.2/schema.json",
  "files": {
    "includes": [
      "**/*",
      "!**/node_modules",
      "!**/dist",
      "!**/build",
      "!**/.vite",
      "!**/.output",
      "!**/.turbo"
    ],
    "ignoreUnknown": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "noUnusedImports": "error"
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "javascript": {
    "globals": []
  },
  "overrides": [
    {
      "includes": ["apps/frontend/**/*.{ts,tsx,js,jsx}"],
      "javascript": {
        "globals": ["window", "document", "navigator"]
      }
    },
    {
      "includes": ["apps/backend/**/*.ts"],
      "javascript": {
        "globals": ["Bun", "Response", "Request"]
      }
    },
    {
      "includes": ["**/*.css"],
      "linter": {
        "rules": {
          "suspicious": {
            "noUnknownAtRule": "off"
          }
        }
      }
    }
  ]
}
